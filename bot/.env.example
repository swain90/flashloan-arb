# Flashloan Arbitrage Bot Configuration
# Copy this to .env and fill in your values

# ============ REQUIRED ============

# Your wallet private key (with 0x prefix)
PRIVATE_KEY=0x...

# ============ RPC ENDPOINTS ============

# Ethereum Mainnet
ETH_RPC_URL=https://eth.llamarpc.com
ETH_WS_URL=wss://eth.llamarpc.com

# Arbitrum
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_WS_URL=wss://arb1.arbitrum.io/ws

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_WS_URL=wss://base-mainnet.flashblocks.chainstack.io

# Optimism
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISM_WS_URL=wss://mainnet.optimism.io

# ============ BOT CONFIGURATION ============

# Chains to monitor (comma-separated chain IDs)
# 1=Ethereum, 42161=Arbitrum, 8453=Base, 10=Optimism
ENABLED_CHAINS=42161,8453

# Minimum profit in USD to execute a trade
MIN_PROFIT_USD=10

# Maximum gas price in gwei (transactions above this won't execute)
MAX_GAS_PRICE_GWEI=100

# Maximum slippage in basis points (100 = 1%)
MAX_SLIPPAGE_BPS=50

# Whether to simulate transactions before executing
SIMULATE=true

# Dry run mode (log trades but don't execute)
DRY_RUN=true

# Maximum concurrent trades
MAX_CONCURRENT_TRADES=1

# Cooldown between trades in milliseconds
COOLDOWN_MS=1000

# ============ MEV PROTECTION ============

# Enable Flashbots on Ethereum mainnet
FLASHBOTS_ENABLED=true

# ============ API SERVER ============

# Port for the API server (used by UI)
API_PORT=3001

# ============ LOGGING ============

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============ CONTRACT ADDRESSES ============
# Update these after deploying contracts

# Arbitrage contract address per chain (set after deployment)
# ARBITRAGE_CONTRACT_ETHEREUM=0x...
# ARBITRAGE_CONTRACT_ARBITRUM=0x...
# ARBITRAGE_CONTRACT_BASE=0x...
# ARBITRAGE_CONTRACT_OPTIMISM=0x...
